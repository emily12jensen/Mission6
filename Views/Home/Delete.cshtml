@{
    ViewData["Title"] = "Delete Task";
}

@model TaskInput;

<h3>Are you sure you want to delete @Model.Task?</h3>
<form method="post">
    <input type="hidden" asp-for="TaskID" />
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="Quadrant" class="btn btn-primary">Cancel</a>
</form>
